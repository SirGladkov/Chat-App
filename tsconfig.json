{
	"compilerOptions": {
		"target": "ES2020", // Указывает, в какую версию ECMAScript должен быть скомпилирован код.
		"module": "NodeNext", // Указывает, какой код модуля должен быть скомпилирован.
		"moduleResolution": "NodeNext", // Указывае, как TypeScript должен разрешать импорт модулей.
		"outDir": "./backend/dist", // Перенаправляет структуру вывода в каталог.
		"rootDir": "./backend/",
		"strict": true, // Включает все параметры строгой проверки типов.
		"esModuleInterop": true, // Позволяет использовать импорт по умолчанию с моулями CommonJS.
		"skipLibCheck": true // Эта опция пропускает проверку типов во всех файлах .d.ts.
	},
	"ts-node": {
		"esm": true
	},
	"include": ["backend/src/**/*"], // Указывае, какие файлы включать при компиляции проекта.
	"exclude": ["node_modules", "**/*.spec.ts", "frontend"] // Указывает, какие файлы стоит исключить при компиляции проекта.
}
